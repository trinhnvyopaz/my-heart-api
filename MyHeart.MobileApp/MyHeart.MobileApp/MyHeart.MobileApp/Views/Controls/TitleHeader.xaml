<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyHeart.MobileApp.Views.Controls.TitleHeader">
  <ContentView.Content>
      <Grid Margin="0,0,0,0" ColumnDefinitions="Auto, *" VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource BackgroundColor}">
            <ImageButton Margin="5,0,0,0" HeightRequest="24" WidthRequest="24" BackgroundColor="Transparent" Source="backbutton.png" x:Name="BackButton"  />
            <Label Grid.ColumnSpan="2" x:Name="TitleLabel"  HorizontalOptions="CenterAndExpand" TextColor="{StaticResource DarkFontColor}" FontFamily="{StaticResource NunitoBoldFont}" FontSize="17"/>
      </Grid>
  </ContentView.Content>
</ContentView>